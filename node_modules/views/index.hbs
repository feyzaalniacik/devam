{{#if todos.length}}
<ul>
    {{#each todos}}
    <li class="todo">
        {{!-- gelen data burada listelenecek --}}
        <form action="/complete" method="post"> {{!-- forma alınmasının sebebi save butonu ekleyebilmektir --}}
        <label>
            {{#if completed}} //üstü çizili gelir
            <input type="checkbox" name="completed">
            <span class="completed">{{title}}</span>
            {{else}}
            <input type="checkbox" name="completed">
            <span>{{title}}</span>
            {{/if}}
            <input type="hidden" value="{{_id}}" name="id">
            {{!-- mongodb'de id '_id' olarak gözükür --}}
            <button class="btn btn-small" type="submit">Save</button>
        </label>
        </form>
    </li>
    {{/each}}
</ul>
{{else}}
<p>No todos!!</p>
{{/if}}
{{!-- todos'u todos.js sayfasından alır --}}
