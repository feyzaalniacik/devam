{{!-- bir buton oluşturuluyorsa o butonun insert işlemi vardır --}}
<form action="/create" method="post">
{{!-- action nere ile bağlantı kuracağını gösterir. method hangi yöntemle göndereceğini söyler  --}}
    <h2>Create ToDo</h2>
    <div>
        {{!-- sayfada manuel girdi vermek için hep input kullanılır. alttaki input textbox oluşturur --}}
        <input id="icon_prefix" type="text" name="title">
        <label for="icon_prefix">Todo title</label>
        {{!-- label for input ile birbirine bağlar--}}
    </div>
    <button type="submit" class="waves-effect waves-light btn">Create</button>
    {{!-- classtaki kod https://materializecss.com/ sayfasındaki buton sekmesinden alınmıştır --}}
    
</form>